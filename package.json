{
  "name": "flexgrafik-app",
  "private": true,
  "version": "1.0.0",
  "description": "ADHD Accountability Assistant - Production Ready",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest tests/inputValidation.test.js",
    "test:components": "jest tests/components.test.js",
    "test:scheduler": "jest tests/scheduler.test.js",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint . --ext .js,.ts,.tsx",
    "lint:fix": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "verify-build": "node scripts/verify-build.js",
    "deploy:firebase": "npm run build && firebase deploy --only hosting",
    "deploy:vercel": "vercel --prod",
    "deploy": "npm run build && npm run verify-build && npm run deploy:firebase"
  },
  "dependencies": {
    "framer-motion": "^11.15.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
