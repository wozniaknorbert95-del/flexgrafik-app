/* Import design system FIRST (must precede all other statements) */
@import './styles/design-tokens.css';
@import './styles/typography.css';
@import './styles/accessibility.css';

/* Tailwind directives */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* Global resets */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto',
    'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans',
    'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-color: #000000;
  color: #ffffff;
}

/* Fade in animation */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fadeIn 0.3s ease-out;
}

/* Safe area for mobile devices */
.pb-safe {
  padding-bottom: env(safe-area-inset-bottom);
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 4px;
}

::-webkit-scrollbar-track {
  background: #0a0a0a;
}

::-webkit-scrollbar-thumb {
  background: #333;
  border-radius: 2px;
}

/* Remove tap highlight */
-webkit-tap-highlight-color: transparent;

/* ═══════════════════════════════════════════════
   CYBERPUNK BASE LAYER - SCANLINES & GLOW EFFECTS
   ═══════════════════════════════════════════════ */

/* Scanline effect on body */
body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  background: repeating-linear-gradient(
    0deg,
    rgba(0, 255, 255, 0.03) 0px,
    transparent 2px,
    transparent 4px,
    rgba(0, 255, 255, 0.03) 4px
  );
  z-index: 9999;
  animation: scanlines 8s linear infinite;
}

@keyframes scanlines {
  0% { transform: translateY(0); }
  100% { transform: translateY(4px); }
}

/* Neon text glow utility classes */
.text-neon-cyan {
  color: #00ffff;
  text-shadow: 0 0 10px rgba(0, 255, 255, 0.8),
               0 0 20px rgba(0, 255, 255, 0.4);
}

.text-neon-magenta {
  color: #ff0080;
  text-shadow: 0 0 10px rgba(255, 0, 128, 0.8),
               0 0 20px rgba(255, 0, 128, 0.4);
}

.text-neon-gold {
  color: #ffd700;
  text-shadow: 0 0 10px rgba(255, 215, 0, 0.8),
               0 0 20px rgba(255, 215, 0, 0.4);
}

/* Card glow effects */
.card-glow-cyan {
  box-shadow: 0 0 20px rgba(0, 255, 255, 0.2),
              inset 0 0 20px rgba(0, 255, 255, 0.05);
  border: 1px solid rgba(0, 255, 255, 0.3);
}

.card-glow-magenta {
  box-shadow: 0 0 20px rgba(255, 0, 128, 0.2),
              inset 0 0 20px rgba(255, 0, 128, 0.05);
  border: 1px solid rgba(255, 0, 128, 0.3);
}

/* Hover intensify effects */
.hover-glow:hover {
  filter: brightness(1.2);
  transform: translateY(-2px);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Cyberpunk borders */
.border-cyber {
  border: 1px solid rgba(0, 255, 255, 0.3);
  background: linear-gradient(
    135deg,
    rgba(0, 255, 255, 0.05) 0%,
    transparent 100%
  );
}

/* Progress ring animations */
@keyframes pulse-glow {
  0%, 100% {
    box-shadow: 0 0 10px rgba(255, 0, 128, 0.5);
  }
  50% {
    box-shadow: 0 0 20px rgba(255, 0, 128, 0.8);
  }
}

.pulse-glow {
  animation: pulse-glow 2s ease-in-out infinite;
}

/* Dark theme overrides for any default elements */
.bg-black { background-color: #000000 !important; }
.text-white { color: #ffffff !important; }

/* Ensure dark background on all containers */
html, body, #app {
  background-color: #000000 !important;
  color: #ffffff !important;
}